            nounPlace2 = input("Enter a second noun that is also a place: ex:park ")
            animalName2 = input("Enter a second animal name: ex.:dog ")
            gameName = input("Enter a game: ex.:tag ")
            emotionName = input("Enter an emotion: ex.: happy ")
            sentence1 = "The " + animalName + " bought a " + colorName + " " + garmentName + " and " + fruitName + " at the " + nounPlace1 + "."
            sentence2 = " The " + animalName + " then went to the " + nounPlace2 + " and saw a " + animalName2 + " playing " + gameName + "."
            sentence3 = " Now the " + animalName + " is " + emotionName + " because they want to play " + gameName + "."
            print(sentence1 + sentence2 + sentence3)
       else:
        #madLib2: Star Wars
            adjective1 = input("Enter an adjective: ex.: fluffy ")
            noun1 = input("Enter a noun: ex.:hand ")
            adjective2 = input("Enter a second adjective: ex.:fluffy ")
            nounPlace = input("Enter a noun that is a place: ex.:park ")
            adjective3 = input("Enter another adjective: ex.:fluffy ")
            adjective4 = input("Enter another adjective: ex.:fluffy ")
            pluralNoun1 = input("Enter a plural noun that is a vehicle: ex.:cars ")
            adjective5 = input("Enter another adjective: ex.:fluffy ")
            adjective6 = input("Enter another adjective: ex.:fluffy ")
            pluralNoun2 = input("Enter a plural noun: ex.:books ")
            adjective7 = input("Enter another adjective: ex.:fluffy ")
            pluralNoun3 = input("Enter another plural noun: ex.:books ")
            pluralNoun4 = input("Enter another plural noun: ex.:books ")
            adjective8 = input("Enter another adjective: ex.:fluffy ")
            noun2 = input("Enter another noun: ex.:hand ")
            verb = input("Enter a verb: ex.:sing ")
            adjective9 = input("Enter another adjective: ex.:fluffy ")
            verb2 = input("Enter another verb: ex.:sing ")
            pluralNoun5 = input("Enter another plural noun: ex.:books ")
            pluralNoun6 = input("Enter a plural noun that is a type of job: ex.:librarians ")
            adjective10 = input("Enter another adjective: ex.:fluffy ")
            verb3 = input("Enter another verb: ex.:sing ")
            adjective11 = input("Enter another adjective, sorry last one I promise: ex.:fluffy ")
            sentence4 = "Star Wars is a " + adjective1 + " " + noun1 + " of " + adjective2 + " versus evil in a " + nounPlace + " far far away. "
            sentence5 = "There are " + adjective3 + " battles between " + adjective4 + " " + pluralNoun1 + " in " + adjective5 + " space and " + adjective6 + " duels with " + pluralNoun2 + " called " + adjective7 + " sabers. "
            sentence6 = pluralNoun3 + " called 'droids' are helpers and " + pluralNoun4 + " to the heros. "

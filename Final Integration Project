    #math
       print(16+3) #adds 16 and 3
       print(16-3) #subracts 3 from 16
       print(16*3) #multiplies 16 and 3
       print(16**3) #makes 3 the exponent of 16
       print(16/3) #divides 16 by 3
       print(16//3) #floor division, cuts of the decimal
       print(16%3) #gives the remainder of 16 divided by 3, modulus

    #multiplying string operators
       myWord = "banana!" * 10 #outputs "banana!" 10 times
       print(myWord)

    #use of sep=
       itemName = input("Enter the name of the item: ")
       numItems = int(input("Enter the number of items: "))
       itemCost = float(input("Enter the cost of one item: "))
       totalCost = numItems*itemCost
       print("Item name : ", itemName)
       print("Cost of one item: ", itemCost)
       print("number of items purchased: ", numItems)
       print("Total cost: $", format(totalCost, "0.2f"), sep='')

    #budgeting for a shopping trip
       income = int(input("Enter your income: "))
       spending = 0
       if(income >= 100000):
            spending = 10000
       elif(income >= 75000):
            spending = 5000
       elif(income >= 50000):
            spending = 2500
       elif(income >= 25000):
            spending = 1000
       print("Your spending is ${:,.2f}".format(spending))


    #boolean and relational operators
       x=3
       y=5
       print(x==y)
       print(x!=y)

       numBooks=40
       print((numBooks>5) and (numBooks<100))
       print((numBooks<5) or (numBooks>100))
       print(not(numBooks*10==100))
       #for loop
       name = input("Enter your name: ")
       for x in range(20):
            print(name)

    
main()
